<mjml>
    <mj-head>
        <mj-attributes>
            
         <mj-class name="main-image" vertical-align="middle" />

         <mj-class name="social-hover"     color="black"  />
   <mj-class name="social-div"  align="left"     />
   <mj-class name="wrapper-div"    background-color="#f2f0ef"   />
   <mj-class name="button-nav"     color="white" align="center" />
         <!-- <mj-class name="social-div1" border="1px solid white" color="pink"   /> -->
        </mj-attributes>
        <mj-style>
            .hover-btn td:hover {
        background-color:green !important;
        
    }
    
.hover-btn a:hover {
        background-color: transparent !important; 
        color: #f4d35e !important;
    }

.fb-btn a:hover {
 background-color: transparent !important; 
        color: #f4d35e !important;
}
.fb-btn td:hover {
        background-color:green !important;
        
    }



.social-hover {
    display: flex;
    flex-direction: row;
gap: 1rem;
cursor: pointer;

}


.social-hover :hover {
        cursor: pointer;
}

.social-div {
    background-color: #e5e5e5;
    background: white;
    font-weight:bold; 
    box-shadow: 0 5px 10px rgb(0 0 0 / 0.2);
cursor: pointer;
    
}

.column2  {
padding-right: 20px;
}

@media only screen and (max-width: 480px) {

        .column2 {
            padding: 20px;
            width: 15rem !important;
        }


      }

.social-div :hover {
    
        cursor: pointer;
}

.social-div:active {
  background: #e5e5e5;
  -webkit-box-shadow: inset 0px 0px 5px #c1c1c1;
     -moz-box-shadow: inset 0px 0px 5px #c1c1c1;
          box-shadow: inset 0px 0px 5px #c1c1c1;
   outline: none;
}




.button-nav a {
 background-color: #e5e5e5 !important;
    background: white !important;
    font-weight:bold !important; 
    box-shadow: 0 5px 10px rgb(0 0 0 / 0.2) !important;
cursor: pointer !important;
color: black !important;

}

.button-next a {
 background-color: #e5e5e5 !important;
    background: white !important;
    font-weight:bold !important; 
    box-shadow: 0 5px 10px rgb(0 0 0 / 0.2) !important;
cursor: pointer !important;
color: black !important;
width: 8rem;

}

        </mj-style>
</mj-head>
    
<mj-body mj-class="body-div" >
