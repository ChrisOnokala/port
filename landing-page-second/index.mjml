            <mj-image border-radius="10%" src="./assets/pexels1.jpg"  
            padding-bottom="0" height="400px" />
        </mj-column>

       

        <mj-column mj-class="column2" css-class="column2"  vertical-align="middle"  width="45%"  >

     

<mj-social   mj-class="social-div" css-class="social-div" >
    <mj-social-element  mj-class="social-hover" css-class="social-hover"   href="https://facebook.com/" src="./assets/fb.png">
       <mj-text  mj-class="social-word" css-class="social-word" >
        Continue with Facebook 
       </mj-text>
    </mj-social-element>
</mj-social>

<mj-spacer height="10px" />


<mj-social   mj-class="social-div" css-class="social-div" >
